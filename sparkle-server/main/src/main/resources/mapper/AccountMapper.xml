<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cream.sparkle.main.mapper.AccountMapper">
    <select id="selectCountByUsername" resultType="java.lang.Integer">
        select count(*)
        from account
        where username = #{username}
    </select>
    <select id="selectByUsername" resultType="com.cream.sparkle.main.object.entity.Account">
        select *
        from account
        where username = #{username}
    </select>
</mapper>